<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <clevervisualpagebuilder>
            <general>
                <is_enabled>1</is_enabled>
                <home_page>0</home_page>
                <home_page_default>0</home_page_default>
                <home_template>home-panels.php</home_template>
                <affiliate_id>0</affiliate_id>
                <display_teaser-id>1</display_teaser-id>
                <display_learn>1</display_learn>
                <load_on_attach>0</load_on_attach>
                <post_types>page,post</post_types>
