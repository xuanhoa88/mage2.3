<?php
    $images = $block->getGalleryImages();
    $theme = $this->helper('CleverSoft\CleverTheme\Helper\Data');
    $rtl_language = $theme->getCfg('responsive/rtl_language');
?>

<div class="d-none d-lg-block">
    <div class="gallery-carousel _block-content-loading owl-carousel owl-theme">
        <?php foreach ($images as $image) {?>
            <?php if ($image->getData('media_type') == 'image'): ?>
                <div class="item">
                    <a href="<?php echo ($image->getData('large_image_url')); ?>">
                        <img src="<?php echo($image->getData('medium_image_url')) ;?>">
                    </a>
                </div>
            <?php elseif ($image->getData('media_type') == 'external-video'): ?>
                <div class="item" data-media-type="external-video" data-media-url="<?php echo($image->getData('video_url')); ?>">
                    <a href="<?php echo ($image->getData('large_image_url')); ?>">
                        <img src="<?php echo($image->getData('medium_image_url')) ;?>">
                    </a>
                </div>
            <?php endif;?>
        <?php } ?>
    </div> 
</div>

<script>
    require([
        "jquery",
        "jQueryLibMin"
    ], function ($) {
        $(function () {
            var $left = $('.gallery-carousel').offset().left;
            $('.gallery-carousel').css({
                'left': '-' + $left + 'px',
                'position': 'relative',
                // 'width': $(window).width() + 'px' (Remove config full-width)
            });
            <?php if($rtl_language) : ?>
            $('.gallery-carousel').css({'left': '0', 'right': '-' + $left + 'px'});
            <?php else : ?>
            $('.gallery-carousel').css({'right': '0', 'left': '-' + $left + 'px'});
            <?php endif; ?>
            (function($) {
                $(document).ready(function() {
                    $('.gallery-carousel').owlCarousel({
                        margin:30,
                        nav:true,
                        loop:true,
                        navText: ["<i class='cs-font clever-icon-prev'></i>", "<i class='cs-font clever-icon-next'></i>"],
                        responsive:{
                            0:{
                                items:1
                            },
                            768:{
                                items:2
                            },
                            992:{
                                items:3
                            },
                            1336:{
                                items:4
                            }
                        }
                    });
                });
            }) (jQuery);

            jQuery(document).on('click', '.swatch-option',function(){
                if($('.swatch-attribute').is('[option-selected]')) {
                    $('body').removeClass('type-images-carousel');
                    $('.gallery-carousel._block-content-loading').hide();
                    $(window).trigger('resize');
                }else {
                    $('body').addClass('type-images-carousel');
                    $('.gallery-carousel._block-content-loading').show();
                }
            });
        });
    });
</script>

