    <default>
        <clevershopby>
            <general>
                <ajax_enabled>1</ajax_enabled>
                <handle_filter_collapsing>1</handle_filter_collapsing>
                <enabled>1</enabled>
                <url>all-products</url>
            </general>
            <stock_filter>
                <enabled>0</enabled>
                <placed_block>1</placed_block>
