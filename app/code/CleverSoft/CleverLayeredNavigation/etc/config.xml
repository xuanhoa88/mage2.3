            <new_filter>
                <enabled>0</enabled>
                <placed_block>1</placed_block>
                <position>0</position>
                <label>New</label>
                <is_expanded>0</is_expanded>
                <display_mode>0</display_mode>
            </new_filter>
            <on_sale_filter>
                <enabled>0</enabled>
                <placed_block>1</placed_block>
                <position>0</position>
                <label>On Sale</label>
                <is_expanded>0</is_expanded>
                <display_mode>0</display_mode>
