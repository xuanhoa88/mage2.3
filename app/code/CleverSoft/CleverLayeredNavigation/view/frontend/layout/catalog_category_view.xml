<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="CleverSoft\CleverLayeredNavigation\Block\Product\ProductList\Ajax" name="category.clevershopby.ajax" template="product/productlist/ajax.phtml" after="-"/>
        </referenceContainer>
        <referenceBlock name="product_list_toolbar_pager">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">CleverSoft_CleverLayeredNavigation::html/pager.phtml</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="main.content">
            <container name="wrap-breadcrumbs" htmlTag="div" htmlClass="wrap-breadcrumbs zoo-breadcrumbs" before="-">
                <container name="wrap-breadcrumbs-content" htmlTag="div" htmlClass="container">
                </container>
            </container>
        </referenceContainer>
        <move element="breadcrumbs" destination="wrap-breadcrumbs-content" before="-" />
