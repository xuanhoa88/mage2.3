<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="CleverSoft\CleverSocialLogin\Block\General" name="popup"
                   template="CleverSoft_CleverSocialLogin::account/link/popup.phtml">
                <block class="CleverSoft\CleverSocialLogin\Block\Form\Login" name="social-login-popup-authentication"
                       as="popup.authentication" template="CleverSoft_CleverSocialLogin::form/login.phtml">
                    <block class="Magento\Captcha\Block\Captcha" name="social-login-captcha" as="login.captcha"
                           after="-">
                        <action method="setFormId">
                            <argument name="formId" xsi:type="string">user_login</argument>
                        </action>
                        <action method="setImgWidth">
                            <argument name="width" xsi:type="string">230</argument>
                        </action>
                        <action method="setImgHeight">
                            <argument name="width" xsi:type="string">50</argument>
                        </action>
                    </block>
                </block>
                <block class="CleverSoft\CleverSocialLogin\Block\Form\Register" name="social-login-popup-create"
                       as="popup.create" template="CleverSoft_CleverSocialLogin::form/register.phtml">
                    <block class="Magento\Captcha\Block\Captcha" name="social-create-captcha" as="create.captcha"
                           after="-">
                        <action method="setFormId">
                            <argument name="formId" xsi:type="string">user_create</argument>
                        </action>
                        <action method="setImgWidth">
                            <argument name="width" xsi:type="string">230</argument>
                        </action>
                        <action method="setImgHeight">
                            <argument name="width" xsi:type="string">50</argument>
                        </action>
                    </block>
                </block>
                <block class="Magento\Framework\View\Element\Template" name="social-login-popup-forgot"
                       as="popup.forgot" template="CleverSoft_CleverSocialLogin::form/forgot.phtml">
                    <block class="Magento\Captcha\Block\Captcha" name="social-forgot-password-captcha"
                           as="forgot.captcha" after="-">
                        <action method="setFormId">
                            <argument name="formId" xsi:type="string">user_forgotpassword</argument>
                        </action>
                        <action method="setImgWidth">
                            <argument name="width" xsi:type="string">230</argument>
                        </action>
                        <action method="setImgHeight">
                            <argument name="width" xsi:type="string">50</argument>
                        </action>
                    </block>
                </block>
            </block>
            <block class="CleverSoft\CleverSocialLogin\Block\General" name="pslogin.general">
                <action ifconfig="sociallogin/general/enable" method="setTemplate">
                    <argument name="template" xsi:type="string">CleverSoft_CleverSocialLogin::general.phtml</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="page.messages">
            <block class="CleverSoft\CleverSocialLogin\Block\Messages" name="pslogin.messages"/>
        </referenceContainer>
        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Template" name="pslogin.theme.html.header.photo"
                   as="pslogin_photo" before="customer">
                <action ifconfig="sociallogin/general/enable" method="setTemplate">
                    <argument name="template" xsi:type="string">
                        CleverSoft_CleverSocialLogin::theme/html/header/photo.phtml
                    </argument>
                </action>
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="pslogin-photo" xsi:type="array">
                                <item name="component" xsi:type="string">pslogin-photo</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="captcha_page_head_components" ifconfig="sociallogin/general/enable" template="Magento_Captcha::js/components.phtml"/>
        </referenceBlock>

        <!-- Customer Authentication-popup -->
        <referenceContainer name="before.body.end">
            <block class="CleverSoft\CleverSocialLogin\Block\Buttons" name="cslogin.customer.form.login.buttons"
                   as="cslogin_buttons" template="CleverSoft_CleverSocialLogin::customer/form/login/buttons.phtml">
                <action method="checkPosition">
                    <argument name="position" xsi:type="string">login</argument>
                </action>
                <action method="setOutput2js"/>
            </block>
        </referenceContainer>

    </body>
</page>
