<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="columns" >
        <container htmlTag="div" htmlClass="row d-flex sm-flex-column">
            <container htmlTag="div" htmlClass="sidebar sidebar-left col-xs-12 col-md-3 pull-left" htmlId="shop-sidebar-left" before="-">
                <container name="div.sidebar.main" htmlTag="div" htmlClass="zoo-sidebar-main" >
                    <container name="sidebar.main" as="sidebar_main" label="Sidebar Main"/>
                </container>
                <container name="div.sidebar.additional" htmlTag="div" htmlClass="zoo-sidebar-additional" after="div.sidebar.main">
                    <container name="sidebar.additional" as="sidebar_additional" label="Sidebar Additional"/>
                </container>
            </container>
            <container htmlTag="div" htmlClass="col-md-12 col-lg-9 pull-right padding-left-30 shop-main">
                <container name="main" as="main" label="main" />
            </container>
        </container>
    </referenceContainer>
</layout>
 
 
 
 
 
 
 
 
 
